<aura:component description="MedicationPrescription" implements="flexipage:availableForRecordHome,force:hasRecordId,lightning:actionOverride" access="global">
    <aura:attribute name="newMedication" type="Object"/>
    <aura:attribute name="simpleNewMedication" type="Object"/>
    <aura:attribute name="newMedicationError" type="String"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <force:recordData aura:id="medicationRecordCreator"
                      layoutType="FULL"
                      targetRecord="{!v.newMedication}"
                      targetFields="{!v.simpleNewMedication}"
                      targetError="{!v.newMedicationError}" />

    <div class="slds-page-header" role="banner">
        <p class="slds-text-heading_label">Prescribe Medication</p>
    </div>

    <!-- Display Lightning Data Service errors -->
    <aura:if isTrue="{!not(empty(v.newMedicationError))}">
        <div class="recordError">
            <ui:message title="Error" severity="error" closable="true">
                    {!v.newMedicationError}
            </ui:message>
        </div>
    </aura:if>

    <!-- Display the new contact form -->
    <div class="slds-form_stacked">
        <lightning:input aura:id="contactField" name="firstName" label="First Name"
                         value="{!v.simpleNewMedication.Name}" required="true"/>

        <lightning:input aura:id="contactField" name="lastname" label="Last Name"
                         value="{!v.simpleNewMedication.Name}" required="true"/>

        <lightning:input aura:id="contactField" name="title" label="Title"
                         value="{!v.simpleNewMedication.Title}" />

        <lightning:button label="Save contact" onclick="{!c.handleSaveContact}"
                          variant="brand" class="slds-m-top_medium"/>
    </div>
    <h1>Hello World!</h1>
</aura:component>
